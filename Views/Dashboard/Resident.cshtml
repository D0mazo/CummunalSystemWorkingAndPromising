@{
    ViewData["Title"] = "Gyventojo Puslapis";
    var services = ViewBag.Services as List<CommunalSystem.Models.ServicePrice>;
    var message = ViewBag.Message ?? "Šis puslapis skirtas gyventojui peržiūrėti savo bendrijos paslaugas ir kainas.";
    <link href="~/css/styles.css" rel="stylesheet" />
}

<div class="dashboard-container">
    @if (TempData["Success"] != null)
    {
        <div class="success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="error">@TempData["Error"]</div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="info">@TempData["Message"]</div>
    }

    <h1>Gyventojo Puslapis</h1>

    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit">Logout</button>
    </form>

    <p>@message</p>

    <div class="card">
        <h2>Services</h2>
        <form method="post" action="@Url.Action("ViewServices", "Dashboard")">
            <div>
                <label>Search Name:</label>
                <input type="text" name="search" />
            </div>
            <button type="submit">Search</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Paslauga</th>
                    <th>Kaina</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in services)
                {
                    <tr>
                        <td>@service.ServiceName</td>
                        <td>@service.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
