<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Show success/error messages -->
    @if (TempData["Success"] != null)
    {
        <div class="success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="error">@TempData["Error"]</div>
    }

    <!-- Main content from views -->
    @RenderBody()

    <!-- Logout link if user is logged in -->
    @if (Context.Session.GetString("Role") != null)
    {
        <a href="@Url.Action("Logout", "Account")" class="text-blue-500 hover:underline">Logout</a>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>
