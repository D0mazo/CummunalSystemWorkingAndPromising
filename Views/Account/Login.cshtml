@{
    ViewData["Title"] = "Login";
}
<link href="~/css/styles.css" rel="stylesheet" />
<div class="login-container relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    <h1 class="dashboard-header animate-pulse-slow">Communal System Login</h1>

  
    <form asp-action="Login" method="post" class="space-y-6 bg-glass p-6 rounded-xl shadow-lg glow">
        <div class="form-group">
            <label class="form-label" for="username">Username:</label>
            <input type="text" id="username" name="username" class="form-input w-full focus:ring-4 focus:ring-cyan-500/50" placeholder="Enter your username" required />
        </div>
        <div class="form-group">
            <label class="form-label" for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-input w-full focus:ring-4 focus:ring-cyan-500/50" placeholder="Enter your password" required />
        </div>
        <button type="submit" class="btn w-full text-lg py-3 glow hover:scale-105 transform transition-transform duration-300">
            <span>Login</span>
            <span class="ml-2 inline-block animate-pulse-slow">🔑</span>
        </button>
    </form>
</div>