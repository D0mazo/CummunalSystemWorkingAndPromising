@{
    ViewData["Title"] = "Login";
    @:
    <link rel="stylesheet" href="~/css/site.css" />
}


<div class="login-container relative overflow-hidden">
    <!-- Animated Background Particles (using CSS) -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    <h1 class="text-4xl font-bold text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-600 animate-pulse-slow">Login</h1>
    <form method="post" class="space-y-6 bg-glass p-6 rounded-xl shadow-lg glow">
        <div class="form-group">
            <label class="form-label">Username:</label>
            <input type="text" name="username" class="form-input focus:ring-4 focus:ring-indigo-500/50" placeholder="Enter your username" />
        </div>
        <div class="form-group">
            <label class="form-label">Password:</label>
            <input type="password" name="password" class="form-input focus:ring-4 focus:ring-indigo-500/50" placeholder="Enter your password" />
        </div>
        <button type="submit" class="btn w-full text-lg py-3 glow hover:scale-105 transform transition-transform duration-300">
            <span>Login</span>
            <span class="ml-2 inline-block animate-pulse-slow">🔑</span>
        </button>
    </form>
    @if (TempData["Error"] != null)
    {
        <div class="error mt-4 text-center">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="success mt-4 text-center">@TempData["Success"]</div>
    }
</div>